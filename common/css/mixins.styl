nowrap()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

abs-stretch()
  position absolute
  top 0
  left 0
  right 0
  bottom 0

  width 100%
  height 100%

abs-left(left=0)
  z-index 1
  position absolute
  top 0
  left left
  right auto
  bottom auto

abs-top(top=0)
  z-index 1
  position absolute
  top top
  left 0
  right auto
  bottom auto

abs-right(right=0)
  z-index 1
  position absolute
  top 0
  left auto
  right right
  bottom auto

abs-right-center(right=0)
  z-index 1
  position absolute
  top 50%
  left auto
  right right
  bottom auto
  transform translateY(-50%)

abs-bottom(bottom=0)
  z-index 1
  position absolute
  top auto
  left auto
  right auto
  bottom bottom

fixed-top(top=0)
  z-index 1
  position fixed
  top top
  left 0
  right auto
  bottom auto

fixed-stretch()
  z-index 1
  position fixed
  left 0
  top 0
  right 0
  bottom 0

  width 100%
  height 100%

flex-center()
  display flex
  justify-content center
  align-items center
  align-content center

flex-left()
  display flex
  justify-content flex-start
  align-items center

bg-normal()
  background-size cover
  background-repeat no-repeat
  background-position center
  background-clip padding-box

larger-than($width)
  @media screen and (min-width: $width)
    {block}
    